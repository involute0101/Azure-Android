<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="10dp"
    android:elevation="2dp"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="属性"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_subscription"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订阅"
                    android:textSize="14dp"
                    android:textColor="@color/brown_deeper"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:id="@+id/img_db_subscription_lock"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/icon_lock"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_subscription_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subscription_default_id"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_subscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subscription_default_name"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_resource_group"
            android:layout_marginLeft="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资源组"
                android:textSize="14dp"
                android:textColor="@color/brown_deeper"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test2"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位置"
            android:textSize="14dp"
            android:textColor="@color/brown_deeper"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:id="@+id/tv_db_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dbName"
            android:textSize="14dp"
            android:textColor="@color/brown_deeper"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:id="@+id/tv_db_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ServerName"
            android:textSize="14dp"
            android:textColor="@color/brown_deeper"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:id="@+id/tv_server_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maxSizeBytes"
            android:textSize="14dp"
            android:textColor="@color/brown_deeper"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:id="@+id/tv_max_bytes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:textSize="14dp"
                android:textColor="@color/brown_deeper"
                android:layout_marginLeft="25dp"/>
            <ImageView
                android:id="@+id/img_db_id_lock"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_lock"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_db_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ip_default"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createTime"
            android:textSize="14dp"
            android:textColor="@color/brown_deeper"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:id="@+id/tv_db_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DNS名"
            android:textSize="14dp"
            android:textColor="@color/brown_deeper"
            android:layout_marginLeft="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>
</LinearLayout>