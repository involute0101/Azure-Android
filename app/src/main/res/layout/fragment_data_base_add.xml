<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/vm_create_head">
        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/icon_mysql"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建数据库"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_virtualmachine"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据库用户名"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/et_db_username"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/text_cursor"
                android:background="@drawable/vm_create_input"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_sql"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数据库名称"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/et_db_name"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/text_cursor"
                android:background="@drawable/vm_create_input"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_vm_password"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/et_db_psw"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/text_cursor"
                android:background="@drawable/vm_create_input"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_resource_group"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="资源组名称"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <EditText
                android:id="@+id/et_db_sourcegroup"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="15dp"
                android:paddingLeft="5dp"
                android:textCursorDrawable="@drawable/text_cursor"
                android:background="@drawable/vm_create_input"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/createDBButton"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginTop="25dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/btn_create_vm"
        android:text="确认创建"
        android:textColor="@color/white"
        android:textSize="10dp" />
</LinearLayout>
</ScrollView>