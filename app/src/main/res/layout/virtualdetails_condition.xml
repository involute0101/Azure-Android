<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="10dp"
    android:elevation="2dp"
    android:background="@color/white"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="状态"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电源状态"
        android:textSize="16dp"
        android:textColor="@color/brown_deeper"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_condition_power"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_running_48"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_condition_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在运行"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预配状态"
        android:textSize="16dp"
        android:textColor="@color/brown_deeper"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_condition_preplan"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_running_48"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_condition_preplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成功"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
</LinearLayout>