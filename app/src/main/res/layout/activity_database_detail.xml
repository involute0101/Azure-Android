<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_db_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDEDED"
        android:layout_weight="20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.25">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_db_detail_start"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_stop"
                android:layout_gravity="center"
                android:onClick="click_Event"/>
            <TextView
                android:id="@+id/tv_db_detail_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止"
                android:textSize="16dp"
                android:textColor="@color/azure_deep"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_db_detail_delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_restart"
                android:layout_gravity="center"
                android:onClick="click_Event"/>
            <TextView
                android:id="@+id/tv_db_detail_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重启"
                android:textSize="16dp"
                android:textColor="@color/azure_deep"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>